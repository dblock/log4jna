<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>log4jna</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <!-- Sources -->
  <fileSets>
    <fileSet>
      <directory>..\assembly</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>\</outputDirectory>
      <excludes>
        <exclude>**\*.*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>..\artifacts</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>sources\artifacts</outputDirectory>
      <includes>
        <include>\**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\build</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>sources\build</outputDirectory>
      <includes>
        <include>src\*.*</include>
      </includes>
     <excludes>
        <exclude>\src\Maven\**\*.*</exclude>
     </excludes>
    </fileSet>
    <fileSet>
      <directory>..\demo</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>sources\demo</outputDirectory>
      <includes>
        <include>src\**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\log4jna/</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>sources\log4jna</outputDirectory>
      <includes>
        <include>src\**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\win32dll/</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>sources/log4jna</outputDirectory>
      <includes>
        <include>src\**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>src\**\*</include>
        <include>*.md</include>
        <include>log4jna.jpg</include>
        <include>pom.xml</include>
        <include>LICENSE.txt</include>
      </includes>
    </fileSet><!-- Documentation -->
    <fileSet>
      <directory>..\doc</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>\doc</outputDirectory>
      <includes>
        <include>**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\demo\target\site</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>doc\demo</outputDirectory>
      <includes>
        <include>**\*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\log4jna\target\site</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>doc\log4jna-api</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\target\site</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>doc\</outputDirectory>
      <includes>
        <include>**\*.*</include>
      </includes>
    </fileSet>
    <!-- Libraries (Jars and DLL) -->
    <fileSet>
      <directory>..\win32dll\target</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>\lib</outputDirectory>
      <includes>
        <include>Win32EventLogAppender.dll</include>
      </includes>
    </fileSet>
    <fileSet>
      <!-- Include all jars including javadoc and sources (developers would like to use them on IDEs -->
      <directory>..\log4jna-api\target</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>\lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..\demo\target</directory>
      <filtered>false</filtered>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>\lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>